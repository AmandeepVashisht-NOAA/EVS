#!/bin/sh

#################################
# SET SHELL PROCESSING VARIABLES 
#################################
set -x
export PS4='+ $SECONDS + '
date

#########################################################
# obtain unique LSF id (jobid) and make temp directories 
#########################################################
export pid=$$
export DATA_IN=${DATA_IN:-${DATAROOT}}
export DATA=${DATA_IN}/${jobid:?}
mkdir -p $DATA
cd $DATA

##########################################
# Run setpdy and initialize PDY variables 
##########################################
export cycle=${cycle:-t00z}
setpdy.sh
. ./PDY
export INITDATE=${PDYm1}
export NEXTDATE=${PDY}

######################################
# Determine Job Output Name on System 
######################################
export pgmout="OUTPUT.${pid}"

####################################
# Set EVS directories               
####################################
FIXevs=/lfs/h2/emc/vpppg/noscrub/emc.vpppg/verification/EVS_fix
export HOMEevs=${HOMEevs:-${PACKAGEROOT}/evs.${model_ver}}
export EXECevs=${EXECevs:-$HOMEevs/exec}
export FIXvevs=${FIXevs:-$HOMEevs/fix}
export PARMevs=${PARMevs:-$HOMEevs/parm}
export USHevs=${USHevs:-$HOMEevs/ush}

######################################
# Correct MET/METplus roots (Aug 2022)
######################################
export MET_ROOT=/apps/ops/para/libs/intel/${intel_ver}/met/${met_ver}
export MET_BASE=${MET_ROOT}/share/met
export METPLUS_PATH=/apps/ops/para/libs/intel/${intel_ver}/metplus/${metplus_ver}
export PATH=${METPLUS_PATH}/ush:${MET_ROOT}/bin:${PATH}

####################################
# Define NET/RUN variables          
####################################
export NET=${NET:-evs}
export STEP=${STEP:-prep}
export COMPONENT=${COMPONENT:-global_ens}
export MODELNAME=${MODELNAME:-gefs}
export RUN=${RUN:-wave}
export VERIF_CASE=${VERIF_CASE:-grid2obs}

####################################
# Define COMIN/COMOUT variables     
####################################
export COMIN=${COMIN:-$(compath.py -o ${NET}/${evs_ver})}
export COMINgefs=${COMINgefs:-$(compath.py ${MODELNAME}/${model_ver})}
##export COMINobs=${COMINobs:-$(compath.py obsproc/${obsproc_ver})}
## WARNING: Could not find the dev COM paths list at /lfs/h1/ops/dev/config/compaths.list
## Could not find obsproc/v1.0
export COMINobs=/lfs/h1/ops/prod/com/obsproc/v1.0
export COMINgdas=${COMINobs}/gdas
#export COMINobs=/lfs/h2/emc/vpppg/noscrub/deanna.spindler/GEFS_grib/archive
## archived files are ${COMINobs}/${INITDATE}/gdas.t*z.prepbufr


##COMOUT=${COMOUT:-$(compath.py -o $NET/$evs_ver/$STEP/$COMPONENT/$RUN.$INITDATE)}
export OUTPUTROOT="/lfs/h2/emc/stmp/$USER"
#export COMOUT=${OUTPUTROOT}/${NET}/${evs_ver}/${STEP}/${COMPONENT}/${RUN}.${INITDATE}/${MODELNAME}/${VERIF_CASE}
# /lfs/h2/emc/stmp/$USER/evs/v1.0/prep/global_ens/wave.${INITDATE}/gefs/grid2obs
export COMOUT=${OUTPUTROOT}/${NET}/${evs_ver}/${STEP}/${COMPONENT}/${RUN}
# /lfs/h2/emc/stmp/$USER/evs/v1.0/prep/global_ens/wave
mkdir -p ${COMOUT}.${INITDATE}/${MODELNAME}/${VERIF_CASE}

export jlogfile=${DATA}/${MODELNAME}_${RUN}_PB2NC.log

####################################
# Execute the script                
####################################
env
$HOMEevs/scripts/global_ens/prep/exevs_global_ens_wave_grid2obs_prep.sh 1>>$pgmout 2>errfile.${pid}
export err=$?; err_chk

cat $pgmout

msg="JOB $job HAS COMPLETED NORMALLY."
postmsg "$jlogfile" "$msg"

if [ "$KEEPDATA" != "YES" ] ; then
  rm -rf $DATA
fi

date
